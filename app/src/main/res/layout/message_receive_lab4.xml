<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:clipToPadding="false">

    <View
            android:layout_alignParentLeft="true"
            android:background="@drawable/row_receive"
            android:scaleType="centerInside"
            android:layout_width="34dp"
            android:layout_height="34dp" android:id="@+id/receiveAvatar"/>
    <TextView
            android:layout_toRightOf="@id/receiveAvatar"
            android:layout_alignTop="@id/receiveAvatar"
            android:layout_marginLeft="15dp"
            android:text=""
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/message"/>
</RelativeLayout>